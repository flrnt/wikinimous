<% @articles.each do |article| %>
  <%= link_to article_path(article) do %>
    <h3><%= article.title%></h3>
  <% end %>
  <p>Wrote on <%= article.date.strftime('%d/%m/%Y')%> by Flrnt</p>
  <p><i class="fa fa-clock-o"></i> 10 min. read | <i class="fa fa-flag-o"></i> French</p>
  <p><%= article.content%></p>

  <hr>
<%end%>
