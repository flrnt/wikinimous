<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @articles.each do |article| %>
      <h3><%= link_to article.title.capitalize, article_path(article) %></h3>

<!--           <h3><%= article.title.capitalize %></h3>
        <#% end %> -->
        <p>Wrote on <%= article.date.strftime('%b %d, %Y')%> by Flrnt</p>
        <p><i class="fa fa-clock-o"></i> <%= article.timeread %> min. read | <i class="fa fa-flag-o"></i> <%= article.language %></p>
        <p><%= article.content%></p>
        <hr>
      <%end%>
    </div>
  </div>
</div>
