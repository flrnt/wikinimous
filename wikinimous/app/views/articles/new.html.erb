<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@article) do |f| %>
        <%= f.label :title %> <br>
        <%= f.text_field :title %> <br>
        <%= f.label :content %><br>
        <%= f.text_field :content, class:'post-content' %> <br><br>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
